          =content_tag(:div, flash[type], :class => type) if flash[type]
        %div
          %section
            :preserve
              #{yield}
      #sidebar
        
        .section
          #whoami
            %h2 BLAH1
            :markdown

        .section
          #contacts
            %h2 BLAH2
        
        .section
          #links
            %h2 BLAH3

      #footer
