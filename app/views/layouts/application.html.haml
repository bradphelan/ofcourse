!!! 5
%html
  %head
    %link{:href => "/stylesheets/compiled/main.css", :rel => "stylesheet", :type => "text/css"}
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    = csrf_meta_tag
    /[if lt IE 9]
      = javascript_include_tag 'html5'
    = stylesheet_link_tag "formtastic"
    = javascript_include_tag :defaults
    = javascript_include_tag :ckeditor
    = javascript_include_tag :event_calendar
  %body
    .container
      #header
      #content
        #logo
          %h1 
            %a{:href => "/"}
              %span.title Glen Eira U3A
        -[:notice,:error, :success].each do |type|
          =content_tag(:div, flash[type], :class => type) if flash[type]
        %div
          %section
            =yield
      #sidebar
        
        .section
          #whoami
            = link_to "Courses", course_index_path

        .section
          #contacts
            - if user_signed_in?
              = link_to "Sign Out", destroy_user_session_path
            - else
              = link_to "Sign in", new_user_session_path
        .section
          #links
            - if user_signed_in?
              = link_to "New Course", new_course_path

      #footer
